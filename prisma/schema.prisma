// prisma/prisma.schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Job {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  JobTitle        String
  companyname     String
  salary          String
  salarytype      String
  joblocation     String
  experiencelevel String
  skillset        String
  employmenttype  String
  description     String
  companylogo     String
  email           String
}
